text = input("Enter the text: ")
k = int(input("Enter the shift value (1-25): "))

if k < 1 or k > 25:
    print("Invalid shift value!")
    exit()

encrypted = ""

for char in text:
    if char.isupper():
        encrypted += chr((ord(char) - ord('A') + k) % 26 + ord('A'))
    elif char.islower():
        encrypted += chr((ord(char) - ord('a') + k) % 26 + ord('a'))
    else:
        encrypted += char

print("Encrypted text:", encrypted)
